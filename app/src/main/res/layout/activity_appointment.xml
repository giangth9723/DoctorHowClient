<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="project.fpt.edu.vn.registerscreen.Activity.AppointmentActivity">

    <!-- top -->
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:background="@drawable/border_top"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

        <ImageButton
            android:id="@+id/imgBtnBack"
            app:srcCompat="@drawable/ic_chevron_left"
            android:background="@null"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            tools:ignore="VectorDrawableCompat" />

        <TextView
            android:id="@+id/txtBack"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="0dp"
            android:layout_toEndOf="@+id/ImgBtnBack"
            android:text="Trở về"
            android:textColor="@color/black"
            android:textSize="20dp" />

    </android.support.v7.widget.Toolbar>

    <!-- mid -->
    <android.support.v7.widget.CardView
        android:layout_marginRight="7dp"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="7dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profileImageView"
                android:layout_gravity="center_horizontal"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/male_doctor"
                app:civ_border_color="#363632"
                app:civ_border_width="2dp"/>

            <TextView
                android:text="Đặt lịch với"
                android:textSize="18dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="7dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="Doctor Vu Dang"
                android:id="@+id/tvDocName"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="7dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:textSize="25dp"
                android:id="@+id/edtDate"
                android:textColor="@color/black"
                android:background="@drawable/edittext_border02"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:focusable="false"
                android:hint=" Hẹn ngày"/>

            <EditText
                android:id="@+id/edtTime"
                android:textColor="@color/black"
                android:background="@drawable/edittext_border02"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:focusable="false"
                android:textSize="25dp"
                android:hint=" Hẹn giờ"/>

            <EditText
                android:id="@+id/edtContent"
                android:textColor="@color/black"
                android:background="@drawable/edittext_border02"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="20dp"
                android:paddingLeft="1dp"
                android:textSize="25dp"
                android:hint=" Nội dung"/>

            <Button
                android:background="@drawable/green_button"
                android:id="@+id/btnBook"
                android:text="Đặt lịch"
                android:textSize="20dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
