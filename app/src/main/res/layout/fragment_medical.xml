<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="project.fpt.edu.vn.registerscreen.Activity.MenuActivity">

    <!-- TODO: Update blank fragment layout -->
    <!-- Benh phu khoa -->
    <android.support.v7.widget.CardView
        android:id="@+id/cvFemale"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.3"
                android:layout_height="match_parent"
                android:gravity="center">
                <ImageView
                    android:layout_width="66dp"
                    android:layout_height="64dp"
                    android:background="@drawable/circle_pink_background"
                    android:padding="10dp"
                    app:srcCompat="@drawable/ic_icon_female" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.7"
                android:layout_height="match_parent"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kiểm tra bệnh án phụ khoa"
                    android:textSize="18dp" />

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <!-- Benh nam khoa -->
    <android.support.v7.widget.CardView
        android:id="@+id/cvMental"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.3"
                android:layout_height="match_parent"
                android:gravity="center">
                <ImageView
                    android:layout_width="66dp"
                    android:layout_height="64dp"
                    android:background="@drawable/circle_blue_background"
                    android:padding="10dp"
                    app:srcCompat="@drawable/ic_icon_mental" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.7"
                android:layout_height="match_parent"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kiểm tra bệnh án tâm thần"
                    android:textSize="18dp" />

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <!-- Benh phu khoa -->
    <android.support.v7.widget.CardView
        android:id="@+id/cvDermatology"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.3"
                android:layout_height="match_parent"
                android:gravity="center">
                <ImageView
                    android:layout_width="66dp"
                    android:layout_height="64dp"
                    android:background="@drawable/circle_deepgreen_background"
                    android:padding="10dp"
                    app:srcCompat="@drawable/ic_icon_dermatology" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.7"
                android:layout_height="match_parent"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kiểm tra bệnh án da liễu"
                    android:textSize="18dp" />

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
