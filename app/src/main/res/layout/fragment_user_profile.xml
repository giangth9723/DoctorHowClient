<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="project.fpt.edu.vn.registerscreen.Fragment.FragmentUserProfile">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:background="@drawable/border"
        android:id="@+id/SclUser"
        android:layout_below="@+id/LineUserTop"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/LineVerInfor"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Name-->
            <LinearLayout
                android:background="@drawable/border_style01"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight=".2"
                    app:srcCompat="@drawable/ic_name"/>
                <TextView
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/colorBlack"
                    android:id="@+id/tvUserProName"
                    android:layout_marginTop="5dp"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight=".8"
                    android:text="Vũ Hải Đăng"
                    android:textSize="20dp"/>
            </LinearLayout>

            <!-- Gender-->
            <LinearLayout
                android:orientation="horizontal"
                android:background="@drawable/border_style01"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight=".2"
                    app:srcCompat="@drawable/ic_gender"/>
                <TextView
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/colorBlack"
                    android:id="@+id/tvUserProGender"
                    android:layout_marginTop="5dp"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight=".8"
                    android:text="Nam"
                    android:textSize="20dp"/>
            </LinearLayout>

            <!-- Job -->
            <LinearLayout
                android:orientation="horizontal"
                android:background="@drawable/border_style01"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight=".2"
                    app:srcCompat="@drawable/ic_date"/>
                <TextView
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/colorBlack"
                    android:id="@+id/tvUserProBirth"
                    android:layout_width="0dp"
                    android:layout_marginTop="5dp"
                    android:layout_height="40dp"
                    android:layout_weight=".8"
                    android:text="14/04/1996"
                    android:textSize="20dp"/>
            </LinearLayout>
            <!-- Job -->
            <LinearLayout
                android:orientation="horizontal"
                android:background="@drawable/border_style01"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight=".2"
                    app:srcCompat="@drawable/ic_job_suitcase"/>
                <TextView
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/colorBlack"
                    android:id="@+id/tvUserProJob"
                    android:layout_marginTop="5dp"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight=".8"
                    android:text="Sinh viên"
                    android:textSize="20dp"/>
            </LinearLayout>
            <!-- Coin -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight=".2"
                    app:srcCompat="@drawable/ic_phone"/>
                <TextView
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/colorBlack"
                    android:id="@+id/tvUserProPhone"
                    android:layout_marginTop="5dp"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight=".8"
                    android:text="0975414496"
                    android:textSize="20dp"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</FrameLayout>
