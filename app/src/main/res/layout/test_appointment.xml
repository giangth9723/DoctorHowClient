<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- top -->
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/LineAppTop"
        android:background="@drawable/border_top"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageButton
            android:id="@+id/ImgBtnBack"
            app:srcCompat="@drawable/ic_chevron_left"
            android:background="@null"
            android:layout_width="50dp"
            android:layout_height="50dp" />

        <TextView
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="5dp"
            android:textSize="20sp"
            android:fontFamily="@font/laxanh"
            android:text="Đặt lịch"
            android:layout_width="wrap_content"
            android:layout_height="30dp"/>

    </LinearLayout>

    <!-- mid -->
    <LinearLayout
        android:layout_below="@+id/LineAppTop"
        android:background="@drawable/border"
        android:orientation="vertical"
        android:layout_marginRight="7dp"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="7dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profileImageView"
            android:layout_gravity="center_horizontal"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_doctoravatar"
            app:civ_border_color="#363632"
            app:civ_border_width="2dp"/>

        <TextView
            android:text="Đặt lịch với"
            android:fontFamily="@font/laxanh"
            android:textSize="18dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="7dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="Doctor Vu Dang"
            android:id="@+id/tvAppDocName"
            android:textColor="#000000"
            android:fontFamily="@font/laxanh"
            android:textSize="18dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="7dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/etDate"
            android:background="@drawable/edittext_border04"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"/>

        <TextView
            android:id="@+id/edTime"
            android:background="@drawable/edittext_border04"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="20dp"/>

    </LinearLayout>

    <!-- bottom -->
    <LinearLayout
        android:id="@+id/LineRegBot"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <Button
            android:background="@drawable/green_button"
            android:id="@+id/Btnreg"
            android:text="Tiếp tục"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/laxanh"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

</RelativeLayout>