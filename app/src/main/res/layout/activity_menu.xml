<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="project.fpt.edu.vn.registerscreen.Activity.MenuActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/RelLayout">

        <!-- top -->
        <LinearLayout
            android:id="@+id/LineLayTop"
            android:orientation="horizontal"
            android:weightSum="100"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:background="@drawable/border_top">
            <!-- Profile Avatar -->
            <RelativeLayout
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="25"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profileImageView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_user_avatar"
                    app:civ_border_color="#363632"
                    app:civ_border_width="2dp"/>

            </RelativeLayout>
            <!-- Doctor information-->
            <RelativeLayout
                android:layout_weight="60"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/txtShowName"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vu Hai Dang"
                    android:textColor="@color/colorBlack"
                    android:textSize="20sp"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_weight="15"
                android:layout_width="0dp"
                android:layout_height="match_parent">

            </RelativeLayout>


        </LinearLayout>

        <!-- mid -->
        <RelativeLayout
            android:id="@+id/RelLayoutMid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/LineLayTop"
            android:layout_above="@+id/RelLayoutBot">
        </RelativeLayout>

        <!-- bottom -->
        <RelativeLayout
            android:background="@drawable/border_bottom"
            android:id="@+id/RelLayoutBot"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true">

            <android.support.design.widget.BottomNavigationView
                android:id="@+id/navigation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="0dp"
                android:layout_marginStart="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:fontFamily="@font/laxanh"
                app:theme="@style/customfontstyle"
                app:menu="@menu/navigation"/>
        </RelativeLayout>

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
