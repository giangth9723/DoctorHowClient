            android:screenOrientation="portrait"/>
        <activity
            android:name=".Activity.Medical.ActivityMentalContent"
            android:windowSoftInputMode="stateHidden"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".Activity.Medical.ActivityMentalExaminationHistory"
            android:windowSoftInputMode="stateHidden"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".Activity.Medical.ActivityMentalMenu"
            android:windowSoftInputMode="stateHidden"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".DoctorProfileActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.ActivityHistoryDoctorView"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.UserProfileChangeActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" />
        <activity android:name=".Activity.AppointmentActivity"
            android:screenOrientation="portrait"></activity>
        <service android:name=".Service.SocketServiceProvider"/>
    </application>

</manifest>