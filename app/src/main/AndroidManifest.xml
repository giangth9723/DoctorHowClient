            android:name=".Activity.DoctorList.ActivityDoctorListFemale"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".Activity.DoctorList.ActivityDoctorListDermatology"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".Activity.DoctorList.ActivityDoctorListMental"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".Activity.WaitingCallActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".Activity.CallActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".Activity.UserPasswordChangeActivity"
            android:windowSoftInputMode="stateHidden"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".Activity.UserProfileActivity"
            android:windowSoftInputMode="stateHidden"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".Activity.Medical.ActivityDermaContent"
            android:windowSoftInputMode="stateHidden"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".Activity.Medical.ActivityDermaExaminationHistory"
            android:windowSoftInputMode="stateHidden"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".Activity.Medical.ActivityDermaMenu"
            android:windowSoftInputMode="stateHidden"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".Activity.Medical.ActivityFemaleContent"
